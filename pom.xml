<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>de.hu_berlin.german.korpling.saltnpepper</groupId>
  <artifactId>pepperModules-TigerModules</artifactId>
  <version>1.1.13-SNAPSHOT</version>
  <packaging>bundle</packaging>
  <repositories>
    <repository>
      <id>SaltNPepper Repository</id>
      <url>https://korpling.german.hu-berlin.de/~annis/maven2/saltnpepper/</url>
    </repository>
    <repository>
      <id>SaltNPepper Repository 2</id>
      <url>https://korpling.german.hu-berlin.de/maven2</url>
    </repository>
  </repositories>
  <parent>
    <groupId>de.hu_berlin.german.korpling.saltnpepper</groupId>
    <artifactId>pepper-parentModule</artifactId>
    <version>1.1.2</version>
  </parent>
  <scm>
    <developerConnection>scm:svn:https://korpling.german.hu-berlin.de/svn/saltnpepper/PepperModules/TigerModules/trunk</developerConnection>
  </scm>
  <dependencies>
  	 <!-- this must be processed to aquire tiger api into the maven repo -->
  	 <!-- mvn install:install-file -Dfile=lib/tigerAPI1.8.2.jar -DgroupId=tiger -DartifactId=tigerAPI -Dversion=1.8.2 -Dpackaging=jar -->
     	<dependency>
  		<groupId>tiger</groupId>
  		<artifactId>tigerAPI</artifactId>
  		<version>1.8.2</version>
  		<type>jar</type>
    	<scope>compile</scope>
  	</dependency>
  </dependencies>
  <build>
    <plugins>
      <!-- start: Plugin for automatic releasing -->
      <plugin>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.1</version>
        <configuration>
          <tagBase>
           https://korpling.german.hu-berlin.de/svn/saltnpepper/PepperModules/TigerModules/tags/
          </tagBase>
          <releaseProfiles>release</releaseProfiles>
          <goals>assembly:single deploy</goals>
        </configuration>
      </plugin>
      <!-- start: creation of bundle jar -->
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <version>2.1.0</version>
        <extensions>true</extensions>
        <executions>
          <execution>
            <phase>process-classes</phase>
            <goals>
              <goal>bundle</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <manifestLocation>${basedir}/META-INF</manifestLocation>
          <source>1.6</source>
          <target>1.6</target>
          <instructions>
            <Bundle-Name>${project.artifactId}</Bundle-Name>
            <Bundle-SymbolicName>${project.groupId}.${project.artifactId};singleton:=true</Bundle-SymbolicName>
            <Bundle-Version>${project.version}</Bundle-Version>
            <Bundle-RequiredExecutionEnvironment>JavaSE-1.6</Bundle-RequiredExecutionEnvironment>
            <Service-Component>OSGI-INF/${component.descriptor.name}</Service-Component>
            <Bundle-ClassPath>.,{maven-dependencies}, lib/tigerAPI-1.8.2.jar</Bundle-ClassPath>
            <Include-Resource>{maven-resources}, LICENSE, NOTICE, lib/tigerAPI-1.8.2.jar=tigerAPI-1.8.2.jar</Include-Resource>
          </instructions>
        </configuration>
      </plugin>
      <!-- end: creation of bundle jar -->
    </plugins>
  </build>
</project>